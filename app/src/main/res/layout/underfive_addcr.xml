<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="784dp"
        android:layout_height="1047dp"
        android:orientation="vertical"
        android:weightSum="15"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="45sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:text="Add Child Record" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="General Details"
            android:textSize="30sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="320dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"

                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn1"
                    android:hint="Child Name"
                    android:textAlignment="center"
                    android:inputType="textCapWords"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="320dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"

                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn2"
                    android:hint="Last Name"
                    android:textAlignment="center"
                    android:inputType="textCapWords"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="320dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"

                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn3"
                    android:hint="Mother Name"
                    android:textAlignment="center"
                    android:inputType="textCapWords"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="320dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"

                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn4"
                    android:hint="Father Name"
                    android:textAlignment="center"
                    android:inputType="textCapWords"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/Addn5"
                android:hint="Child Identifier"
                android:textAlignment="center"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/Addn6"
                android:hint="Family Identifier"
                android:textAlignment="center"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="3"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn7"
                    android:hint="Room No"
                    android:textAlignment="center"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn8"
                    android:hint="Bldg No/Line No"
                    android:textAlignment="center"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <Spinner
                android:id="@+id/towns"
                android:layout_height="@dimen/inputHeight"
                android:layout_width="wrap_content"
                android:entries="@array/towns"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">
            <android.support.design.widget.TextInputLayout
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/Addn9"
                    android:hint="Area"
                    android:textAlignment="center"/>
            </android.support.design.widget.TextInputLayout>
            <Spinner
                android:id="@+id/areacode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/inputHeight"
                android:layout_gravity="center_horizontal"
                android:entries="@array/areacode"
                android:spinnerMode="dropdown"/>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="550dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"

            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/Addn10"
                android:hint="Mobile No"
                android:textAlignment="center"
                android:inputType="phone"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:onClick="setDate"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/Addn11"
                android:hint="Date of Birth"
                android:textAlignment="center"
                android:focusable="false"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"/>
        <Spinner
            android:id="@+id/gender"
            android:layout_width="150dp"
            android:layout_height="@dimen/inputHeight"
            android:layout_gravity="center_horizontal"
            android:entries="@array/gender"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nic"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"/>
        <Spinner
            android:id="@+id/nic"
            android:layout_width="150dp"
            android:layout_height="@dimen/inputHeight"
            android:entries="@array/nic"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_marginTop="50dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/AddRecord"
                android:text="Add Child"
                android:textSize="28sp"/>
            <Button
                android:layout_marginTop="50dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/Refresh"
                android:text="Refresh"
                android:textSize="28sp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
